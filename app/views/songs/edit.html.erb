<% if @song.errors.any? %>
  <div id="error_explanation">
    <h2>Some errors occurred:</h2>
    <ul>
      <% @song.errors.full_messages.each do |m| %>
        <li><%= m %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<h2>Editing "<%= @song.title %>"</h2>
<%= form_for (@song) do |f| %>
  <label>Title:</label><br>
  <%= f.text_field :first_name %><br>

  <label>Last Name:</label><br>
  <%= f.text_area :last_name %><br>

  <%= f.submit %>
<% end %>
